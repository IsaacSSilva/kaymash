# Sempre usar versão exata no package-lock
save-exact=true

# Evita publicar automaticamente arquivos desnecessários
ignore-scripts=false

# Define o registro padrão (caso use outro no CI, como verdaccio, sobrescreva lá)
registry=https://registry.npmjs.org/

# Garante que a versão local está sincronizada com o que está no NPM
access=public

# Evita que o publish aconteça acidentalmente com arquivos indesejados
dry-run=false

# Remove cache no publish (menos bugs)
prefer-online=true

# Silencia alguns lixos de cache
package-lock=false
